<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.carshop.dao.DingdanDao">

    <!-- 查询所有收藏表信息-->
    <select id="queryCollect" resultType="com.carshop.domain.Collect">
        <![CDATA[
        select
            collect_id ,
            type,
            price,
            pinpai,
            user_id ,
            product_id
        from
            t_collect
        ]]>
    </select>
    <!-- 根据收藏表ID加载收藏表信息-->
    <select id="getCollect"   resultType="com.carshop.domain.Collect">
        <![CDATA[
       select
            collect_id ,
            type,
            price,
            pinpai,
            user_id ,
            product_id
        from
            t_collect
        where collect_id=#{collect_id}
       ]]>
    </select>
    <!-- 添加收藏表信息-->
    <insert id="insertCollect" parameterType="com.carshop.domain.Collect">
      <![CDATA[
        insert into t_collect (
            type,
            price,
            pinpai,
            user_id ,
            product_id
        )
        values
        (
            #{type},
            #{price},
            #{pinpai},
            #{user_id},
            #{product_id}
         )
      ]]>
    </insert>
    <!-- 根据收藏表ID删除收藏表信息记录-->
    <delete id="deleteCollect" parameterType="com.carshop.domain.Collect">
        <![CDATA[
        delete from t_collect where collect_id=#{collect_id}
      ]]>
    </delete>
    <!-- 根据收藏表ID修改收藏表信息-->
    <update id="updateCollect" parameterType="com.carshop.domain.Collect">
    <![CDATA[
        update  t_collect
        set     type=#{type},
                price=#{price},
                pinpai=#{pinpai},
                user_id=#{user_id},
                product_id=#{product_id}

        where collect_id=#{collect_id}
     ]]>
    </update>
</mapper>

